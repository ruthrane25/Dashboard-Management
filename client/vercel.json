{
    "version": 2,
    "name": "dashboard-management",
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      },
      {
        "src": "api/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "api/index.js" },
      { "src": "/(.*)", "dest": "/client/$1" }
    ]
  }
  